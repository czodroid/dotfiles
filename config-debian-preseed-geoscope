#!/bin/sh
#
# Filename: config-debian-preseed-geoscope
# Author: Olivier Sirol <czo@free.fr>
# License: GPL-2.0 (http://www.gnu.org/copyleft)
# File Created: 22 February 2021
# Last Modified: Tuesday 11 October 2022, 01:48
# Edit Time: 8:26:46
# Description:
#
#            debian 10 preseed geoscope update
#
# keyboard:
#  apt-get install keyboard-configuration
#  dpkg-reconfigure keyboard-configuration
#  service keyboard-setup restart
# locales:
#  dpkg-reconfigure locales
# time-zone:
#  dpkg-reconfigure tzdata
# upgrade:
#  dpkg-reconfigure unattended-upgrades
#   /etc/apt/apt.conf.d/20auto-upgrades
#   /etc/apt/listchanges.conf
#
# aptitude search '~i ~Osalt'
#
# Copyright: (C) 2021,2022 Olivier Sirol <czo@free.fr>
#
# $Id: config-debian-preseed-geoscope,v 1.24 2022/10/10 23:53:10 czo Exp $

LOGFILE="/tmp/debian_preseed_up_root_$(date '+%Y-%m-%d_%H-%M')_$$.log"

(
export LANG=C
export QUIET="-q -y"
export DEBIAN_FRONTEND=noninteractive
##export DEBIAN_PRIORITY=critical

echo $(date +%Y-%m-%d) > /etc/lsb-czo-installdate
echo $(date +%Y-%m-%d) > /etc/lsb-czo-updatedate

# echo "##== apt sources/update  =============================================##"

# echo "postfix postfix/main_mailer_type select Satellite system
# postfix postfix/root_address string geoscope-alert@ipgp.fr
# postfix postfix/mailname string ipgp.fr
# postfix postfix/relayhost string smtp.ipgp.fr" | debconf-set-selections

# perl -i -pe 's, main contrib non-free, main,' /etc/apt/sources.list
# perl -i -pe 's, main non-free contrib, main,' /etc/apt/sources.list
# perl -i -pe 's, main, main contrib non-free,' /etc/apt/sources.list

# apt-get $QUIET update
# apt-get $QUIET upgrade
# apt-get $QUIET dist-upgrade
# apt-get $QUIET clean

# apt-get $QUIET install aptitude debconf-utils lsb-release bash bash-completion ssh rsync vim-athena xsel xclip xauth ncdu htop iftop iotop iptraf mc screen tmux tmate zsh zsh-doc nmap tcpdump wget curl lftp rcs cvs git ctags recode iperf libnet-xmpp-perl moreutils p7zip zstd mlocate sysstat strace parted gpart gdisk kpartx ethtool dnsutils debootstrap munin-node cu picocom bc perltidy tidy bsdtar hexcurse net-tools telnet tree postfix mailutils autofs nfs-client ntp qemu-guest-agent

echo "##== change config  ==================================================##"

# sshd
perl -i -pe 's,^#?PermitRootLogin.*,PermitRootLogin yes,' /etc/ssh/sshd_config
systemctl restart sshd

# dpkg-reconfigure tzdata
ln -fs /usr/share/zoneinfo/Etc/UTC /etc/localtime
#ln -fs /usr/share/zoneinfo/Europe/Paris /etc/localtime
dpkg-reconfigure -f noninteractive tzdata

# dpkg-reconfigure locales
perl -i -pe 's,# en_US.UTF-8 UTF-8,en_US.UTF-8 UTF-8,' /etc/locale.gen
perl -i -pe 's,# fr_FR.UTF-8 UTF-8,fr_FR.UTF-8 UTF-8,' /etc/locale.gen
update-locale LANG=en_US.UTF-8
locale-gen

# autofs
perl -i -pe 's,^#/net\s*-hosts.*,/net    -hosts,' /etc/auto.master
systemctl restart autofs

# NTP ntpq -p
cat << 'EOF' > /etc/ntp.conf
# /etc/ntp.conf, configuration for ntpd; see ntp.conf(5) for help
# czo, 2021-03-04

driftfile /var/lib/ntp/ntp.drift
leapfile /usr/share/zoneinfo/leap-seconds.list
statistics loopstats peerstats clockstats
filegen loopstats file loopstats type day enable
filegen peerstats file peerstats type day enable
filegen clockstats file clockstats type day enable
restrict -4 default kod notrap nomodify nopeer noquery limited
restrict -6 default kod notrap nomodify nopeer noquery limited
restrict 127.0.0.1
restrict ::1
restrict source notrap nomodify noquery

# CHEZWAM
#server 192.168.11.1

# IPGP
server 10.0.21.15
server 10.0.21.16
server 10.0.21.17

# et POOL
# pool 0.debian.pool.ntp.org iburst
# pool 1.debian.pool.ntp.org iburst
# pool 2.debian.pool.ntp.org iburst
# pool 3.debian.pool.ntp.org iburst

EOF
/etc/init.d/ntp restart

# munin IPGP
perl -i -pe 's,^host_name localhost.localdomain,#host_name localhost.localdomain,' /etc/munin/munin-node.conf
perl -i -pe 's,^allow \^10\\.2\\.5\\.10\$\n,,' /etc/munin/munin-node.conf
perl -i -pe 's,^allow \^10\\.1\\.6\\.16\$\n,,' /etc/munin/munin-node.conf
perl -i -pe 's,^allow \^127\\.0\\.0\\.1.*,allow \^127\\.0\\.0\\.1\$\nallow \^10\\.1\\.6\\.16\$,' /etc/munin/munin-node.conf
service munin-node restart

# cron czo-email-at-reboot
cat << 'EOF' > /etc/cron.d/czo-email-at-reboot
# Filename: czo-email-at-reboot
# 2011/09/10 : Modified by Olivier Sirol <czo@ipgp.fr>

@reboot      root   SUJ="[GSADM] REBOOT `hostname` at `date`" ; ( echo $SUJ ; date ; uname -a ) | mail -s "$SUJ" root > /dev/null
EOF
chmod 644 /etc/cron.d/czo-email-at-reboot


echo "##== config files  ==================================================##"
cd /root
curl -fsSL https://raw.githubusercontent.com/czodroid/dotfiles/master/config-fast-copy | sh

cd /root
cp -rp .ssh .ssh_fast_$(date +%Y-%m-%d)_$$
rm -fr .ssh
mkdir .ssh
chmod 700 .ssh

#ssh-keygen -t rsa -N "" -f .ssh/id_rsa
ssh-keygen -t rsa -b 4096 -N "" -f .ssh/id_rsa

# new passphrase:
#ssh-keygen -p -f id_rsa

cat << 'EOF' >> .ssh/config
# Filename: config
# Author: Olivier Sirol <czo@free.fr>
# License: GPL-2.0 (http://www.gnu.org/copyleft)
# File Created: April 2000
# Last Modified:
# Description:
#   ssh settings
#    ssh -J, ssh -W, ssh -tt
#    ProxyCommand,  ProxyJump
#

# GEOSCOPE
Host geoscopevpn
 Port 222

Host geoscopert
 Port 222
 Hostname geoscopert.dyndns.org

Host geoscopegui
 Port 223
 Hostname geoscopert.dyndns.org

# THE REMAINDER
Host *
 Ciphers aes128-ctr,aes192-ctr,aes256-ctr,aes128-gcm@openssh.com,aes256-gcm@openssh.com,chacha20-poly1305@openssh.com
 ForwardX11 yes
 NoHostAuthenticationForLocalhost yes
 StrictHostKeyChecking ask
 HashKnownHosts no
 ServerAliveInterval 15

EOF

echo "# this host" > .ssh/authorized_keys
cat .ssh/id_rsa.pub  >> .ssh/authorized_keys

cat << 'EOF' >> .ssh/authorized_keys

# backup
ssh-rsa  root@bigfish
ssh-rsa  root@bunnahabhain

# users
ssh-rsa  leroy@leroy-pc
ssh-rsa  lecocq@ipgp.fr
ssh-rsa  czo@bunnahabhain
ssh-rsa  broucke@ordinavroche

# others

EOF

chmod 600 .ssh/config
chmod 600 .ssh/authorized_keys

echo "##== motd ===========================================================##"
/etc/czolsb > /etc/motd

echo "##== end! ===========================================================##"
echo
echo "Log file in:"
echo "$LOGFILE"

) 2>&1 | tee $LOGFILE

