#!/bin/sh
#
# Filename: config-fast-copy
# Author: Olivier Sirol <czo@free.fr>
# License: GPL-2.0 (http://www.gnu.org/copyleft)
# File Created: 12 May 1999
# Last Modified: Saturday 01 July 2023, 22:44
# $Id: config-fast-copy,v 1.32 2023/07/01 20:45:36 czo Exp $
# Edit Time: 5:19:36
# Description:
#
#   copy my config files
#   curl -fsSL https://raw.githubusercontent.com/czodroid/dotfiles/master/config-fast-copy | bash
#   test ssl:
#       curl -fsSLO https://raw.githubusercontent.com/czodroid/dotfiles/master/$f
#       curl -k -fsSLO https://raw.githubusercontent.com/czodroid/dotfiles/master/$f
#       wget -q https://raw.githubusercontent.com/czodroid/dotfiles/master/$f -O $f
#       wget --no-check-certificate -q https://raw.githubusercontent.com/czodroid/dotfiles/master/$f -O $f
#
# Copyright: (C) 1999-2023 Olivier Sirol <czo@free.fr>

# you must do a "cd" before running this script

echo "## -> copy my config files"

mkdir -p  .config/htop
mkdir -p  .config/mc
chmod 700 .config/mc

for f in .Xresources .bashrc .cshrc .cvsrc .gitconfig .inputrc .profile .screenrc .tmux.conf .vimrc .zshrc .clang-format .perltidyrc .pep8 .prettierrc .config/htop/htoprc .config/mc/ini .config/mc/panels.ini
do
  echo "   <- $f"
  curl -fsSL https://raw.githubusercontent.com/czodroid/dotfiles/master/$f -o $f
done

echo "   <- /etc/czolsb"
curl -fsSL https://raw.githubusercontent.com/czodroid/dotfiles/master/czolsb -o /etc/czolsb
chmod 755 /etc/czolsb

