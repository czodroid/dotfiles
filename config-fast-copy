#!/bin/sh
#
# Filename: config-fast-copy
# Author: Olivier Sirol <czo@free.fr>
# License: GPL-2.0
# File Created: April 1999
# Last Modified: mardi 28 juillet 2020, 20:58
# Edit Time: 4:32:51
# Description:
#   copy my config files
#   
#   /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/czodroid/dotfiles/master/config-fast-copy)"
#
# $Id: config-fast-copy,v 1.5 2020/08/01 13:54:36 czo Exp $

# cd
echo "## -> copy root config files"
for f in .Xresources .bashrc .inputrc .profile .screenrc .tmux.conf .vimrc .zshrc .minttyrc
do
  echo "   <- $f"
  curl -fsSLO https://raw.githubusercontent.com/czodroid/dotfiles/master/$f
done

