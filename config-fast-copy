# Last Modified: mercredi 19 aoÃ»t 2020, 14:50
# Edit Time: 4:43:28
# Description:
#   copy my config files
#   
#   wget -qO-  https://raw.githubusercontent.com/czodroid/dotfiles/master/config-fast-copy | bash
#
#   curl -fsSL https://raw.githubusercontent.com/czodroid/dotfiles/master/config-fast-copy | bash
#
# $Id: config-fast-copy,v 1.8 2020/08/19 12:53:10 czo Exp $

# cd
echo "## -> copy my config files"
for f in .Xresources .bashrc .inputrc .profile .screenrc .tmux.conf .vimrc .zshrc
do
  echo "   <- $f"
#  curl -fsSLO https://raw.githubusercontent.com/czodroid/dotfiles/master/$f
  wget -q https://raw.githubusercontent.com/czodroid/dotfiles/master/$f -O $f
done

