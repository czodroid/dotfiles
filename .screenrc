#term xterm-256color

startup_message off
msgwait 5
msgminwait 5

vbell off
vbell_msg "   Wuff  ----  Wuff!!  "
autodetach on
defscrollback 99000

hardstatus off
hardstatus ignore
sorendition "=s Wr"

# 17 car
# dim. 05, 22:24
caption always "%{YK}[%n] %{W.}%h $HOST_PROMPT_SIZE %{C.}%D %d, %c%{-} %{k}%{.$HOST_PROMPT_COLOR} %H %{-}"
#caption always "%3n %t%? (%u)%?%?: %h%?"

# key bindings
bind w windowlist -b
bind ' ' windowlist -b
bind ^k eval kill
bind v paste .
bind ^v paste .

bind 'm' eval "screen 1 ssh magnet -l root" split focus "screen 2 ssh bksyn2 -l root" "split -v" focus "screen 3 ssh wavelet2 -l root" focus


