#term screen-256color
term xterm-256color
# ??terminal-overrides ",*256col*:Tc" 

# This is how one can set a reattach password:
#password ODSJQf.4IJN7E    # "1234"

startup_message off
msgwait 5
msgminwait 5
#vbell on
vbell off
vbell_msg "   Wuff  ----  Wuff!!  "
autodetach on
defscrollback 99000

hardstatus off
hardstatus ignore
sorendition "=s Wr"

# 17 car
# dim. 05, 22:24
caption always "%{YK}[%n] %{W.}%t $HOST_PROMPT_SIZE %{C.}%D %d, %c%{-} %{k}%{.$HOST_PROMPT_COLOR} %H %{-}"

# key bindings
bind ^k eval kill
bind w windowlist -b
bind v paste .
bind ^v paste .

bind 'm' eval "screen 1 ssh magnet -l root" split focus "screen 2 ssh bksyn2 -l root" "split -v" focus "screen 3 ssh wavelet2 -l root" focus

# navigating regions with Ctrl-arrows
#bindkey "^[[1;5D" focus left
#bindkey "^[[1;5C" focus right
#bindkey "^[[1;5A" focus up
#bindkey "^[[1;5B" focus down

