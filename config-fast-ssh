#!/bin/sh
#
# Filename: config-fast-ssh
# Author: Olivier Sirol <czo@free.fr>
# License: GPL-2.0 (http://www.gnu.org/copyleft)
# File Created: April 1999
# Last Modified: mercredi 05 janvier 2022, 15:20
# Edit Time: 8:37:47
# Description:
#
#   configure ssh with my authorized_keys and config
#
#   curl -fsSL https://raw.githubusercontent.com/czodroid/dotfiles/master/config-fast-ssh | bash
#
#   also works in wget: wget -qO- https://pwet | bash
#
# $Id: config-fast-ssh,v 1.14 2022/01/05 14:20:45 czo Exp $

# you must do a "cd" before running this script

cp -rp .ssh .ssh_fast_$(date +%Y-%m-%d)_$$
rm -fr .ssh
mkdir .ssh
chmod 700 .ssh

#ssh-keygen -t rsa -N "" -f .ssh/id_rsa
ssh-keygen -t rsa -b 4096 -N "" -f .ssh/id_rsa

# new passphrase:
#ssh-keygen -p -f id_rsa

cat << 'EOF' >> .ssh/config
# Filename: config
# Author: Olivier Sirol <czo@free.fr>
# License: GPL-2.0 (http://www.gnu.org/copyleft)
# File Created: April 2000
# Last Modified:
# Description:
#   ssh settings
#    ssh -J, ssh -W, ssh -tt
#    ProxyCommand,  ProxyJump
#

# PROXIES

Host *+b
 VerifyHostKeyDNS no
 ProxyCommand ssh -p52022 root@lartha nc $(echo %h | sed 's/+.*//') %p

Host *+l
 VerifyHostKeyDNS no
 ProxyCommand ssh -p42022 root@czo.wf nc $(echo %h | sed 's/+.*//') %p

# cvs on ananas
Host ananaschezwam
 VerifyHostKeyDNS no
 ProxyCommand ssh -p42022 root@czo.wf nc ananas %p

# SMV+GEOSCOPE

Host geoscopevpn
 Port 222

Host geoscopert
 Port 222
 Hostname geoscopert.dyndns.org

Host geoscopegui
 Port 223
 Hostname geoscopert.dyndns.org

Host smv-ups
 Ciphers aes256-cbc
 KexAlgorithms diffie-hellman-group1-sha1

Host smv-pdu*
 Ciphers aes256-cbc

# CHEZWAM

# Host test* debian* ubuntu* centos* fedora* arch* freebsd*
#  StrictHostKeyChecking no

Host centos5 debian4 solaris10 opensolaris
 KexAlgorithms diffie-hellman-group1-sha1

Host fedora5 fedora1
 Ciphers aes256-cbc
 KexAlgorithms diffie-hellman-group1-sha1

Host freebsd5
 HostKeyAlgorithms ssh-dss
 KexAlgorithms diffie-hellman-group1-sha1

# DHCP
Host chezwam-* magdhcp-*
 UserKnownHostsFile /dev/null
 StrictHostKeyChecking no

# THE REMAINDER
Host *
 Ciphers aes128-ctr,aes192-ctr,aes256-ctr,aes128-gcm@openssh.com,aes256-gcm@openssh.com,chacha20-poly1305@openssh.com
 ForwardX11 yes
 NoHostAuthenticationForLocalhost yes
 StrictHostKeyChecking ask
 HashKnownHosts no
 ServerAliveInterval 15

EOF

echo "# this host" > .ssh/authorized_keys
cat .ssh/id_rsa.pub  >> .ssh/authorized_keys

cat << 'EOF' >> .ssh/authorized_keys

# chezwam
ssh-rsa  czo@ananas
ssh-rsa  root@ananas
ssh-rsa  czo@bruichladdich
ssh-rsa  root@bruichladdich
ssh-rsa  czo@dalmore
ssh-rsa  root@dalmore

# ipgp
ssh-rsa  czo@bunnahabhain
ssh-rsa  root@bunnahabhain

EOF

chmod 600 .ssh/config
chmod 600 .ssh/authorized_keys

