# $Id: config-debian-preseed,v 1.13 2021/02/06 17:45:07 czo Exp $

for f in .Xresources .bashrc .cvsrc .inputrc .profile .screenrc .tmux.conf .vimrc .zshrc czolsb
do
  wget --no-check-certificate -q https://raw.githubusercontent.com/czodroid/dotfiles/master/$f -O $f
done
chmod +x czolsb

wget --no-check-certificate -qO- https://raw.githubusercontent.com/czodroid/dotfiles/master/config-fast-ssh  | sh

mkdir -p .config/mc
chmod 700 .config/mc
for f in .config/mc/ini .config/mc/panels.ini
do
  wget --no-check-certificate -q https://raw.githubusercontent.com/czodroid/dotfiles/master/$f -O $f
done



