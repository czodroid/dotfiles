# $Id: config-debian-preseed,v 1.26 2022/12/18 16:10:05 czo Exp $
# Edit Time: 1:13:58
# Description:
#
#   debian preseed/late_command, single or double quote forbiden in pxe/append
#   wget --no-check-certificate -qO- https://git.io/JkHdk | sh
#
# Copyright: (C) 2020-2022 Olivier Sirol <czo@free.fr>

mkdir -p  .config/htop
mkdir -p  .config/mc
chmod 700 .config/mc

for f in .Xresources .bashrc .cshrc .cvsrc .gitconfig .inputrc .profile .screenrc .tmux.conf .vimrc .zshrc .config/htop/htoprc .config/mc/ini .config/mc/panels.ini
do
  wget --no-check-certificate -q https://raw.githubusercontent.com/czodroid/dotfiles/master/$f -O $f
done

wget --no-check-certificate -q https://raw.githubusercontent.com/czodroid/dotfiles/master/czolsb -O /etc/czolsb
chmod 755 /etc/czolsb

wget --no-check-certificate -qO- https://raw.githubusercontent.com/czodroid/dotfiles/master/config-fast-ssh  | sh

