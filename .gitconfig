[user]
    name = Olivier Sirol
    username = czo
    email = czodroid@gmail.com
    ; email = spambazar@gmail.com
    ; email = czo@ipgp.fr

[core]
    pager = cat

[diff]
    tool = vimdiff

[merge]
    tool          = vimdiff
    conflictstyle = diff3
    summary       = true

[alias]
    cld = clone --depth 1
    f = fetch
    fo = fetch origin
    fu = fetch upstream
    l = log --oneline
    lg = log --oneline --graph --decorate
    pst = push --tags

