[core]
    pager = cat

; ; git pull --ff-only
;     ff = only
[pull]
    rebase = false

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[difftool "vimdiff"]
    cmd = vim -d \"$REMOTE\" \"$LOCAL\"

[alias]
    b   = branch -a
    c1  = clone --depth 1
    co  = checkout
    ci  = commit
    d   = diff
    dt  = difftool
    f   = fetch
    fo  = fetch origin
    fu  = fetch upstream
    u   = pull
    p   = push --all
    pt  = push --tags
    ll  = log --all --reverse --pretty=format:'%C(red)%h%Creset %C(cyan)%ad%Creset%C(yellow)%d%Creset %s' --date=format-local:'%Y-%m-%d %H:%M:%S'
    lc  = log --all --reverse --pretty=format:'%C(red)%H%Creset %C(cyan)%ad%Creset%C(yellow)%d%Creset %s' --date=format-local:'%Y-%m-%d %H:%M:%S'
    lr  = log --reverse --reflog --pretty=format:'%C(red)%h%Creset %C(cyan)%ad%Creset%C(yellow)%d%Creset %<(50,mtrunc)%s' --date=format-local:'%Y-%m-%d %H:%M:%S'
    lg  = log --graph --pretty=format:'%C(red)%h%Creset - %C(cyan)%ad%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset%n' --date=format-local:'%Y-%m-%d %H:%M:%S'

; alias  gtu='git pull'
; alias  gtp='git push'
; alias  gtd='git diff'
; alias  gtc='git commit -a'
; alias gtcc='git commit -a -mupdate ; git push'
; alias  gts='git status'
; alias  gta='git add .'
; alias  gtb='git branch -a'
; alias  gtf='git fetch; git diff master origin/master'
; alias gtgc='git gc'
; alias gtcl='git clean -dfn'

