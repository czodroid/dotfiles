[user]
    name     = czo
    ; username = Olivier Sirol
    email    = czo@free.fr
    ; email    = czodroid@gmail.com
    ; email    = spambazar@gmail.com
    ; email    = czo@ipgp.fr

[core]
    pager = cat

; ; git pull --ff-only
;     ff = only
[pull]
    rebase = false

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[difftool "vimdiff"]
    cmd = vim -d \"$REMOTE\" \"$LOCAL\"

[alias]
    b   = branch
    c1  = clone --depth 1
    co  = checkout
    ci  = commit
    d   = diff
    dt  = difftool
    f   = fetch
    fo  = fetch origin
    fu  = fetch upstream
    ; l   = log --pretty=oneline
    l   = log --reflog --pretty=format:'%C(red)%h%Creset %C(cyan)%ad%Creset%C(yellow)%d%Creset %<(50,mtrunc)%s' --date=format-local:'%Y-%m-%d %H:%M:%S'
    ll  = log --reflog --pretty=format:'%C(red)%H%Creset %C(cyan)%ad%Creset%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --date=format-local:'%Y-%m-%d %H:%M:%S'
    lg  = log --graph --pretty=format:'%C(red)%h%Creset - %C(cyan)%ad%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset%n' --date=format-local:'%Y-%m-%d %H:%M:%S'
    pst = push --tags

