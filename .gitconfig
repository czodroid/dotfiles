[user]
    name     = Olivier Sirol
    username = czo
    email    = czo@free.fr
    ; email    = czodroid@gmail.com
    ; email    = spambazar@gmail.com
    ; email    = czo@ipgp.fr

[core]
    pager = cat

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[difftool "vimdiff"]
    cmd = vimdiff \"$LOCAL\" \"$REMOTE\"

[merge]
    tool          = vimdiff
    conflictstyle = diff3
    summary       = true

[alias]
    c   = clone
    c1  = clone --depth 1
    co  = checkout
    ci  = commit
    d   = diff
    dt  = difftool
    f   = fetch
    fo  = fetch origin
    fu  = fetch upstream
    l   = log --oneline
    lg  = log --oneline --graph --decorate
    pst = push --tags


