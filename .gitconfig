[user]
    name     = czo
    username = czo
    email    = czo@free.fr
    ; email    = czodroid@gmail.com
    ; email    = spambazar@gmail.com
    ; email    = czo@ipgp.fr

[core]
    pager = cat

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[difftool "vimdiff"]
    cmd = vim -d \"$REMOTE\" \"$LOCAL\"

[alias]
    c1  = clone --depth 1
    co  = checkout
    ci  = commit
    d   = diff
    dt  = difftool
    f   = fetch
    fo  = fetch origin
    fu  = fetch upstream
    l   = log --oneline
    lg  = log --oneline --graph --decorate
    pst = push --tags


