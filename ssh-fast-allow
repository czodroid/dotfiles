#!/bin/sh
#
# Filename: ssh-fast-allow
# Author: Olivier Sirol <czo@free.fr>
# License: GPL-2.0
# File Created: April 1999
# Last Modified: dimanche 19 juillet 2020, 16:42
# Edit Time: 3:05:18
# Description:
#   configure ssh with my authorized_keys
#   FIXME: deconne sous OSX : pb de cotes....
#
#   wget https://raw.githubusercontent.com/czodroid/dotfiles/master/ssh-fast-allow -O /tmp/runit-$$ && sh /tmp/runit-$$
#
# $Id: ssh-fast-allow,v 1.8 2020/07/20 15:55:32 czo Exp $

cp -rp $HOME/.ssh $HOME/.ssh.fast.bk.$$
rm -fr $HOME/.ssh
mkdir $HOME/.ssh
chmod 700 $HOME/.ssh
   
ssh-keygen -t rsa -N "" -f "$HOME/.ssh/id_rsa"

cat "$HOME/.ssh/id_rsa.pub"  > "$HOME/.ssh/authorized_keys"

cat << 'EOF' >> "$HOME/.ssh/authorized_keys"
ssh-rsa  czo@bruichladdich
ssh-rsa  czo@ananas
ssh-rsa  root@bruichladdich
ssh-rsa  root@ananas
EOF

